@using EventsManager.ViewModel
@model UserRegisteration
<form method="post" asp-action="Register">
    <input hidden asp-for="EventId">
    <div class="form-group col-6">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name" required>
    </div>
    <div class="form-group col-6">
        <label>Mobile</label>
        <input type="number" class="form-control" asp-for="Mobile" placeholder="Enter your mobile number" min="0">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts{
    @if (ViewBag.Alert != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Alert");
            };
        </script>

    }
}